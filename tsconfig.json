{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "allowJs": true,
    "paths": { "@/*": ["src/*"], "#/*": ["mapkit/*"] },
    "types": ["unplugin-icons/types/vue", "vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "mapkit/**/*.ts"],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"]
}
